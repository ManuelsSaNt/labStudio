---


interface Props {
  imageSrc: ImageMetadata,
  delay: number
}

const { imageSrc, delay } = Astro.props;

---

<div class="col-6 col-sm-4 col-md-2 mb-4 mb-md-0 past-clients" data-aos="fade-in" data-aos-delay={delay}>
  <div class="img-fluid text-gray-600 mb-2 mb-md-0">
    <img
      loading="lazy"
      src={imageSrc.src}
      alt="Logo de la empresa Alfer"
    />
  </div>
</div>

<style>
  img {
    filter: hue-rotate(90deg) grayscale(100%);
  }
</style>