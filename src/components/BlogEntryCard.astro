---

// test image only for dev
import testImage from '../img/test/Diseño sin título.png';

interface Props {
  title: string;
  description: string;
  link: string;
  image: string;
  date: string;
}

const { title, description, link, image, date } = Astro.props;

---

<div class="col">
  <a class="card minimal-shadow pointer fadeIn" href={ link }>
    <img src={ testImage.src } class="card-img-top" alt="...">
    <div class="card-body pt-4">
      <h2 class="card-title m-0 mb-1">Card title</h2>
      <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    </div>
  </a>
</div>

<style>

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .fadeIn {
    animation-name: fadeIn;
    animation-duration: 1s;
  }

  .minimal-shadow {
    box-shadow: 0px 4px 5px 0px rgba(51, 51, 51, 0.103);
    transition-property: box-shadow;
    transition-duration: 0.3s;
  }

  .minimal-shadow:hover {
    box-shadow: 0px 4px 5px 0px rgba(51, 51, 51, 0.203);
  }
</style>